---
import Layout from '../layouts/Layout.astro';
import ThemeToggle from '../components/ThemeToggle.svelte';
import DiscountCalculator from '../components/DiscountCalculator.svelte';
---

<Layout title="Discount Calculator - Calculate Discounts Instantly">
	<ThemeToggle client:load />
	
	<main class="container mx-auto px-4 py-8 md:py-16">
		<div class="max-w-6xl mx-auto">
			<h1 class="text-4xl md:text-5xl font-bold text-center mb-4">
				Discount Calculator
			</h1>
			<p class="text-center text-muted-foreground mb-12">
				Calculate discounts quickly and easily with our interactive calculator
			</p>
			
		<!-- Main Content -->
		<div class="max-w-2xl mx-auto">
			<DiscountCalculator client:load />
		</div>
		</div>
	</main>
</Layout>
