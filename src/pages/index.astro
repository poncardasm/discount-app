---
import Layout from '../layouts/Layout.astro';
import ThemeToggle from '../components/ThemeToggle.svelte';
---

<Layout title="Discount Calculator - Calculate Discounts Instantly">
	<ThemeToggle client:load />
	
	<main class="container mx-auto px-4 py-8 md:py-16">
		<div class="max-w-4xl mx-auto">
			<h1 class="text-4xl md:text-5xl font-bold text-center mb-4 text-gray-900 dark:text-slate-100">
				Discount Calculator
			</h1>
			<p class="text-center text-gray-600 dark:text-slate-400 mb-12">
				Calculate discounts quickly and easily with our interactive calculator
			</p>
			
			<!-- Placeholder content to test dark mode -->
			<div class="bg-gray-100 dark:bg-slate-800 rounded-2xl shadow-xl p-8 mb-8">
				<h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-slate-200">
					Test Card
				</h2>
				<p class="text-gray-700 dark:text-slate-300 mb-4">
					This is a test card to verify that dark mode is working correctly. 
					Toggle the theme button in the top-right corner to switch between light and dark modes.
				</p>
				<div class="space-y-2">
					<div class="flex items-center gap-4">
						<span class="text-gray-600 dark:text-slate-400">Primary Color:</span>
						<div class="w-12 h-12 bg-blue-500 dark:bg-blue-400 rounded"></div>
					</div>
					<div class="flex items-center gap-4">
						<span class="text-gray-600 dark:text-slate-400">Success Color:</span>
						<div class="w-12 h-12 bg-green-500 dark:bg-green-400 rounded"></div>
					</div>
				</div>
			</div>
		</div>
	</main>
</Layout>
